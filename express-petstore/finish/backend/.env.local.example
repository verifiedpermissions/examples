# Local development specific environment variables
# Copy this file to .env.local to override settings for local development

# Set to true to use local mocks for AWS services
USE_LOCAL_MOCKS=false

# Local DynamoDB endpoint (if using DynamoDB local)
# DYNAMODB_LOCAL_ENDPOINT=http://localhost:8000

# Optional: Override AWS region
# AWS_REGION=us-east-1

# Debug level (info, debug, error)
LOG_LEVEL=debug

# Enable detailed Cedar authorization logging
CEDAR_DEBUG_LOGGING=true

# Enable performance tracking
ENABLE_PERFORMANCE_TRACKING=true
